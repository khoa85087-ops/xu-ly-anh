import cv2
import numpy as np
from google.colab.patches import cv2_imshow
img=cv2.imread('anh_2.jpg',cv2.IMREAD_GRAYSCALE)
if img is None:
               print("khong thay")
               exit()

cv2_imshow(img)
#tao khung
kernel=np.ones((3,3),np.uint8)
#phep co
img_co=cv2.erode(img,kernel,iterations=1)
cv2_imshow(img_co)
cv2.waitKey(0)
cv2.destroyAllWindows()
